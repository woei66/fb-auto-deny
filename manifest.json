{
    "manifest_version": 3,
    "name": "Facebook Auto Deny",
    "version": "1.2",
    "description": "自動捲動並一鍵拒絕 Facebook 潛在垃圾訊息",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.facebook.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}